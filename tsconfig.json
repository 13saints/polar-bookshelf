{
    "compilerOptions": {

        "noImplicitAny": false,
        "strictNullChecks": false,
        "noImplicitThis": false,


        "sourceMap": true,
        "target": "ES6",
        "module": "commonjs",
        "outDir": "web/js",
        "allowJs": true,
        "stripInternal": true,
        "checkJs": false,

        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": [
        "web/js/**/*"
    ],
    "exclude": [

    ],
    "types": [
        "mocha"
    ],
    "typeRoots": [
        "./node_modules/@types"
    ]
}
